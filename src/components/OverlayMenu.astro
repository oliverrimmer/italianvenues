</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const overlayMenu = document.getElementById('overlay-menu-component');
    const closeButton = document.getElementById('close-menu-button');
    const backdrop = document.getElementById('menu-backdrop');
    const menuButtons = document.querySelectorAll('.menu-section');
    const contentSections = document.querySelectorAll('.menu-content');
    const mobileToggles = document.querySelectorAll('.mobile-menu-toggle');

    if (!overlayMenu) return;

    // Close menu
    function closeMenu() {
      overlayMenu.classList.add('hidden');
      window.dispatchEvent(new CustomEvent('closeMenu'));
    }

    // Open menu
    window.addEventListener('openMenu', () => {
      overlayMenu.classList.remove('hidden');
    });

    // Close handlers
    closeButton?.addEventListener('click', closeMenu);
    backdrop?.addEventListener('click', closeMenu);
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !overlayMenu.classList.contains('hidden')) {
        closeMenu();
      }
    });

    // Mobile: Accordion toggle
    mobileToggles.forEach((toggle) => {
      toggle.addEventListener('click', () => {
        const content = toggle.nextElementSibling;
        const chevron = toggle.querySelector('.mobile-chevron');
        
        if (content && chevron) {
          const isOpen = !content.classList.contains('hidden');
          
          if (isOpen) {
            content.classList.add('hidden');
            chevron.style.transform = 'rotate(0deg)';
          } else {
            content.classList.remove('hidden');
            chevron.style.transform = 'rotate(90deg)';
          }
        }
      });
    });

    // Desktop: Section switching with grey background
    menuButtons.forEach((button) => {
      button.addEventListener('click', (e) => {
        const section = button.getAttribute('data-section');
        
        // Only handle section switching if button has data-section attribute
        if (!section) return;

        // Update active button styling - Porsche style grey background
        menuButtons.forEach((btn) => {
          if (btn.getAttribute('data-section')) {
            btn.classList.remove('bg-porsche-grey');
          }
        });
        button.classList.add('bg-porsche-grey');

        // Show/hide content
        contentSections.forEach((content) => {
          content.classList.toggle('hidden', content.getAttribute('data-content') !== section);
        });
      });
    });

    // Initialize first section as active with grey background (desktop only)
    const firstButtonWithSection = Array.from(menuButtons).find(btn => btn.getAttribute('data-section'));
    if (firstButtonWithSection) {
      firstButtonWithSection.classList.add('bg-zinc-200');
      firstButtonWithSection.click();
    }
    
    // Update active state when clicking menu buttons
    menuButtons.forEach((button) => {
      button.addEventListener('click', () => {
        menuButtons.forEach(btn => btn.classList.remove('bg-zinc-200'));
        button.classList.add('bg-zinc-200');
      });
    });
  });
</script>

<style>
  /* Slide + fade animation for overlay */
  .fixed {
    animation: fadeIn 340ms cubic-bezier(0.22, 1, 0.36, 1);
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  /* Stagger animation for menu cards */
  .menu-content > div > * {
    animation: slideUp 500ms cubic-bezier(0.22, 1, 0.36, 1) backwards;
  }

  .menu-content > div > *:nth-child(1) { animation-delay: 0ms; }
  .menu-content > div > *:nth-child(2) { animation-delay: 40ms; }
  .menu-content > div > *:nth-child(3) { animation-delay: 80ms; }
  .menu-content > div > *:nth-child(4) { animation-delay: 120ms; }
  .menu-content > div > *:nth-child(5) { animation-delay: 160ms; }
  .menu-content > div > *:nth-child(6) { animation-delay: 200ms; }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .fixed {
      animation: none;
    }
    .menu-content > div > * {
      animation: none;
    }
  }
</style>
