---

<div
  id="overlay-menu-component"
  class="fixed inset-0 z-[100] hidden"
  aria-modal="true"
  aria-labelledby="menu-title"
  role="dialog"
>
  <!-- Backdrop -->
  <div
    id="menu-backdrop"
    class="absolute inset-0 bg-black/80 backdrop-blur-sm"
  ></div>

  <!-- Menu Container - Full width on mobile, 70% on desktop -->
  <div class="relative h-full w-full md:w-[70%] bg-white shadow-2xl flex flex-col md:flex-row">
    <!-- Close button - positioned at top right -->
    <button
      id="close-menu-button"
      class="absolute top-4 right-4 md:top-0 md:right-0 w-10 h-10 md:w-16 md:h-16 flex items-center justify-center text-zinc-400 hover:text-black transition-colors focus:outline-none focus:ring-2 focus:ring-black rounded z-20"
      aria-label="Close menu"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <!-- Mobile: Simple list view (Porsche style) -->
    <div class="md:hidden h-full overflow-y-auto">
      <div class="p-6 pt-16">
        <!-- Venues Section -->
        <div class="mb-3">
          <button
            class="mobile-menu-toggle w-full flex items-center justify-between py-3 border-b border-zinc-200 focus:outline-none"
            data-mobile-section="venues"
          >
            <h2 class="text-2xl font-normal">Venues</h2>
            <svg class="mobile-chevron w-6 h-6 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </button>
          <div class="mobile-menu-content hidden pt-3 space-y-2">
            {sections.venues.map((item) => (
              <a href={`/${item.slug}`} class="block py-2 px-4 bg-zinc-50 rounded-lg hover:bg-zinc-100 transition-colors">
                <h3 class="text-lg font-medium">{item.title}</h3>
                {item.subtitle && <p class="text-sm text-zinc-600 mt-1">{item.subtitle}</p>}
              </a>
            ))}
          </div>
        </div>

        <!-- Locations Section -->
        <div class="mb-3">
          <button
            class="mobile-menu-toggle w-full flex items-center justify-between py-3 border-b border-zinc-200 focus:outline-none"
            data-mobile-section="regions"
          >
            <h2 class="text-2xl font-normal">Locations</h2>
            <svg class="mobile-chevron w-6 h-6 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </button>
          <div class="mobile-menu-content hidden pt-3 space-y-2">
            {sections.regions.map((item) => (
              <a href={`/${item.slug}`} class="block py-2 px-4 bg-zinc-50 rounded-lg hover:bg-zinc-100 transition-colors">
                <h3 class="text-lg font-medium">{item.title}</h3>
              </a>
            ))}
          </div>
        </div>

        <!-- Styles & Themes Section -->
        <div class="mb-3">
          <button
            class="mobile-menu-toggle w-full flex items-center justify-between py-3 border-b border-zinc-200 focus:outline-none"
            data-mobile-section="styles"
          >
            <h2 class="text-2xl font-normal">Styles</h2>
            <svg class="mobile-chevron w-6 h-6 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </button>
          <div class="mobile-menu-content hidden pt-3 space-y-2">
            {sections.styles.map((item) => (
              <a href={`/${item.slug}`} class="block py-2 px-4 bg-zinc-50 rounded-lg hover:bg-zinc-100 transition-colors">
                <h3 class="text-lg font-medium">{item.title}</h3>
              </a>
            ))}
          </div>
        </div>

        <!-- About Section -->
        <div class="mb-3">
          <a
            href="/about"
            class="w-full text-left py-3 border-b border-zinc-200 hover:bg-zinc-100 transition-colors focus:outline-none"
          >
            <h2 class="text-2xl font-normal">About</h2>
          </a>
        </div>

        <!-- Contact Section -->
        <div>
          <a
            href="/contact"
            class="w-full text-left py-3 border-b border-zinc-200 hover:bg-zinc-100 transition-colors focus:outline-none"
          >
            <h2 class="text-2xl font-normal">Contact</h2>
          </a>
        </div>
      </div>
    </div>

    <!-- Desktop: Sidebar + Content Area -->
    <div class="hidden md:flex h-full w-full">
      <!-- Left Sidebar - Navigation -->
      <aside class="w-[450px] bg-zinc-50 border-r border-zinc-200 pr-12 py-12 pl-12 overflow-y-auto">
        <nav>
          <h2 id="menu-title" class="sr-only">Navigation Menu</h2>
          <ul class="space-y-0">
            <li>
              <button
                class="menu-section w-full flex items-center justify-between text-left text-xl px-4 py-3 hover:bg-zinc-200/50 transition-all duration-200 focus:outline-none font-normal text-zinc-900"
                data-section="venues"
              >
                <span>Venues</span>
                <svg class="w-5 h-5 flex-shrink-0 text-zinc-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </button>
            </li>
            <li>
              <button
                class="menu-section w-full flex items-center justify-between text-left text-xl px-4 py-3 hover:bg-zinc-200/50 transition-all duration-200 focus:outline-none font-normal text-zinc-900"
                data-section="regions"
              >
                <span>Locations</span>
                <svg class="w-5 h-5 flex-shrink-0 text-zinc-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </button>
            </li>
            <li>
              <button
                class="menu-section w-full flex items-center justify-between text-left text-xl px-4 py-3 hover:bg-zinc-200/50 transition-all duration-200 focus:outline-none font-normal text-zinc-900"
                data-section="styles"
              >
                <span>Styles</span>
                <svg class="w-5 h-5 flex-shrink-0 text-zinc-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </button>
            </li>
            <li>
              <a
                href="/about"
                class="menu-section block w-full text-left text-xl px-4 py-3 hover:bg-zinc-200/50 transition-all duration-200 focus:outline-none font-normal text-zinc-900"
              >
                About
              </a>
            </li>
            <li>
              <a
                href="/contact"
                class="menu-section block w-full text-left text-xl px-4 py-3 hover:bg-zinc-200/50 transition-all duration-200 focus:outline-none font-normal text-zinc-900"
              >
                Contact
              </a>
            </li>
          </ul>
        </nav>
      </aside>

                 <!-- Right Content Area - Scrollable -->
          <div class="flex-1 overflow-y-auto bg-porsche-grey relative">
        <div class="py-12 px-12">
        <!-- Venues Section -->
        <div class="menu-content" data-content="venues">
          <div class="space-y-5">
            {sections.venues.map((item) => (
              <a
                href={`/${item.slug}`}
                class="menu-card-link block group"
              >
                <div class="flex items-center gap-6 p-5 rounded hover:bg-white transition-all duration-200">
                  <!-- Title on left -->
                  <h4 class="text-2xl font-medium font-display w-[200px] flex-shrink-0">
                    {item.title}
                    {item.subtitle && <span class="block text-sm text-zinc-600 font-normal mt-1">{item.subtitle}</span>}
                  </h4>
                  
                  <!-- Image - flexible width -->
                  <div class="flex-1 relative overflow-hidden rounded">
                    <img 
                      src={item.imgSrc} 
                      alt={item.title} 
                      class="w-full h-40 object-cover object-center transition-transform duration-300 group-hover:scale-105" 
                    />
                  </div>
                  
                  <!-- Arrow indicator -->
                  <svg 
                    class="w-5 h-5 text-zinc-600 transition-transform duration-300 group-hover:translate-x-1 flex-shrink-0" 
                    fill="none" 
                    stroke="currentColor" 
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </a>
            ))}
          </div>
        </div>

        <!-- Regions Section -->
        <div class="menu-content hidden" data-content="regions">
          <div class="space-y-5">
            {sections.regions.map((item) => (
              <a
                href={`/${item.slug}`}
                class="menu-card-link block group"
              >
                <div class="flex items-center gap-6 p-5 rounded hover:bg-white transition-all duration-200">
                  <!-- Title on left -->
                  <h4 class="text-2xl font-medium font-display w-[140px] flex-shrink-0">{item.title}</h4>
                  
                  <!-- Image - flexible width -->
                  <div class="flex-1 relative overflow-hidden rounded">
                    <img 
                      src={item.imgSrc} 
                      alt={item.title} 
                      class="w-full h-40 object-cover object-center transition-transform duration-300 group-hover:scale-105" 
                    />
                  </div>
                  
                  <!-- Arrow indicator -->
                  <svg 
                    class="w-5 h-5 text-zinc-600 transition-transform duration-300 group-hover:translate-x-1 flex-shrink-0" 
                    fill="none" 
                    stroke="currentColor" 
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </a>
            ))}
          </div>
        </div>

        <!-- Styles Section -->
        <div class="menu-content hidden" data-content="styles">
          <div class="space-y-5">
            {sections.styles.map((item) => (
              <a
                href={`/${item.slug}`}
                class="menu-card-link block group"
              >
                <div class="flex items-center gap-6 p-5 rounded hover:bg-white transition-all duration-200">
                  <!-- Title on left -->
                  <h4 class="text-2xl font-medium font-display w-[140px] flex-shrink-0">{item.title}</h4>
                  
                  <!-- Image - flexible width -->
                  <div class="flex-1 relative overflow-hidden rounded">
                    <img 
                      src={item.imgSrc} 
                      alt={item.title} 
                      class="w-full h-40 object-cover object-center transition-transform duration-300 group-hover:scale-105" 
                    />
