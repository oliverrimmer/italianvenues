---
// Menu sections data
const sections = {
  locations: [
    { title: 'Tuscany', imgSrc: 'https://imagedelivery.net/SQx9MVPmzIo4YN8gmsdPow/11a787e9-0fe2-4846-5c35-624de0585200/cardlg' },
    { title: 'Amalfi Coast', imgSrc: 'https://imagedelivery.net/SQx9MVPmzIo4YN8gmsdPow/622038ec-6d45-4042-e340-2db5d7319000/cardlg' },
    { title: 'Lake Como', imgSrc: 'https://imagedelivery.net/SQx9MVPmzIo4YN8gmsdPow/19b9edf8-3b60-44e9-1f4c-04678fbae700/cardlg' },
    { title: 'Rome', imgSrc: 'https://imagedelivery.net/SQx9MVPmzIo4YN8gmsdPow/6dbda489-8fea-43f2-98fe-3f5ec4525500/cardlg' },
  ],
  styles: [
    { title: 'Luxury Venues', imgSrc: 'https://imagedelivery.net/SQx9MVPmzIo4YN8gmsdPow/622038ec-6d45-4042-e340-2db5d7319000/cardlg' },
    { title: 'Vineyard Weddings', imgSrc: 'https://imagedelivery.net/SQx9MVPmzIo4YN8gmsdPow/11a787e9-0fe2-4846-5c35-624de0585200/cardlg' },
  ],
};
---

<div
  id="overlay-menu-component"
  class="fixed inset-0 z-[100] hidden"
  aria-modal="true"
  aria-labelledby="menu-title"
  role="dialog"
>
  <!-- Backdrop -->
  <div
    id="menu-backdrop"
    class="absolute inset-0 bg-black/80 backdrop-blur-sm"
  ></div>

  <!-- Menu Container - Full width on mobile, 70% on desktop -->
  <div class="relative h-full w-full md:w-[70%] bg-white shadow-2xl flex flex-col md:flex-row">
    <!-- Close button - top right (mobile) -->
    <div class="md:hidden absolute top-4 right-4 z-20">
      <button
        id="close-menu-button-mobile"
        class="w-10 h-10 rounded-full bg-black text-white flex items-center justify-center hover:bg-zinc-800 transition-colors focus:outline-none focus:ring-2 focus:ring-black"
        aria-label="Close menu"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile: Simple list view (Porsche style) -->
    <div class="md:hidden h-full overflow-y-auto">
      <div class="p-6 pt-16">
        <!-- Locations Section -->
        <div class="mb-8">
          <button
            class="mobile-menu-toggle w-full flex items-center justify-between py-4 border-b border-zinc-200 focus:outline-none"
            data-mobile-section="locations"
          >
            <h2 class="text-2xl font-normal">Locations</h2>
            <svg class="mobile-chevron w-6 h-6 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </button>
          <div class="mobile-menu-content hidden pt-4 space-y-3">
            {sections.locations.map((item) => (
              <a href="#" class="block py-3 px-4 bg-zinc-50 rounded-lg hover:bg-zinc-100 transition-colors">
                <h3 class="text-lg font-medium">{item.title}</h3>
              </a>
            ))}
          </div>
        </div>

        <!-- Styles Section -->
        <div class="mb-8">
          <button
            class="mobile-menu-toggle w-full flex items-center justify-between py-4 border-b border-zinc-200 focus:outline-none"
            data-mobile-section="styles"
          >
            <h2 class="text-2xl font-normal">Venue Styles</h2>
            <svg class="mobile-chevron w-6 h-6 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </button>
          <div class="mobile-menu-content hidden pt-4 space-y-3">
            {sections.styles.map((item) => (
              <a href="#" class="block py-3 px-4 bg-zinc-50 rounded-lg hover:bg-zinc-100 transition-colors">
                <h3 class="text-lg font-medium">{item.title}</h3>
              </a>
            ))}
          </div>
        </div>

        <!-- Contact Section -->
        <div>
          <a
            href="/#"
            class="w-full text-left py-4 border-b border-zinc-200 hover:bg-zinc-100 transition-colors focus:outline-none"
          >
            <h2 class="text-2xl font-normal">Contact</h2>
          </a>
        </div>
      </div>
    </div>

    <!-- Desktop: Sidebar + Content Area -->
    <div class="hidden md:flex h-full w-full">
      <!-- Left Sidebar - Navigation -->
      <aside class="w-80 bg-white border-r border-zinc-200 p-12 overflow-y-auto">
        <nav>
          <h2 id="menu-title" class="sr-only">Navigation Menu</h2>
          <ul class="space-y-3">
            <li>
              <button
                class="menu-section w-full flex items-center justify-between text-left text-2xl px-6 py-8 rounded-2xl hover:bg-porsche-grey transition-all duration-200 focus:outline-none font-medium"
                data-section="locations"
              >
                <span>Locations</span>
                <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </button>
            </li>
            <li>
              <button
                class="menu-section w-full flex items-center justify-between text-left text-2xl px-6 py-8 rounded-2xl hover:bg-porsche-grey transition-all duration-200 focus:outline-none font-medium"
                data-section="styles"
              >
                <span>Venue Styles</span>
                <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </button>
            </li>
            <li>
              <a
                href="/#"
                class="menu-section block w-full text-left text-2xl px-6 py-8 rounded-2xl hover:bg-porsche-grey transition-all duration-200 focus:outline-none font-medium"
              >
                Contact
              </a>
            </li>
          </ul>
        </nav>
      </aside>

                 <!-- Right Content Area - Scrollable -->
           <div class="flex-1 overflow-y-auto bg-porsche-grey relative">
        <!-- Close button - top right (desktop) -->
        <div class="absolute top-8 right-8 z-10">
          <button
            id="close-menu-button"
            class="w-12 h-12 rounded-full bg-black text-white flex items-center justify-center hover:bg-zinc-800 transition-colors focus:outline-none focus:ring-2 focus:ring-black"
            aria-label="Close menu"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

        <div class="p-12 pt-24">
        <!-- Locations Section -->
        <div class="menu-content" data-content="locations">
          <div class="space-y-4">
            {sections.locations.map((item) => (
              <a
                href="#"
                class="menu-card-link block group"
              >
                <div class="flex items-center gap-8 p-4 rounded-lg hover:bg-white transition-all duration-200">
                  <!-- Title on left -->
                  <h4 class="text-3xl font-medium font-display min-w-[200px]">{item.title}</h4>
                  
                  <!-- Image on right -->
                  <div class="flex-1 relative overflow-hidden rounded">
                    <img 
                      src={item.imgSrc} 
                      alt={item.title} 
                      class="w-full h-48 object-cover object-center transition-transform duration-300 group-hover:scale-105" 
                    />
                  </div>
                  
                  <!-- Arrow indicator -->
                  <svg 
                    class="w-6 h-6 text-black transition-transform duration-300 group-hover:translate-x-1 flex-shrink-0" 
                    fill="none" 
                    stroke="currentColor" 
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </a>
            ))}
          </div>
        </div>

        <!-- Styles Section -->
        <div class="menu-content hidden" data-content="styles">
          <div class="space-y-4">
            {sections.styles.map((item) => (
              <a
                href="#"
                class="menu-card-link block group"
              >
                <div class="flex items-center gap-8 p-4 rounded-lg hover:bg-white transition-all duration-200">
                  <!-- Title on left -->
                  <h4 class="text-3xl font-medium font-display min-w-[200px]">{item.title}</h4>
                  
                  <!-- Image on right -->
                  <div class="flex-1 relative overflow-hidden rounded">
                    <img 
                      src={item.imgSrc} 
                      alt={item.title} 
                      class="w-full h-48 object-cover object-center transition-transform duration-300 group-hover:scale-105" 
                    />
                  </div>
                  
                  <!-- Arrow indicator -->
                  <svg 
                    class="w-6 h-6 text-black transition-transform duration-300 group-hover:translate-x-1 flex-shrink-0" 
                    fill="none" 
                    stroke="currentColor" 
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const overlayMenu = document.getElementById('overlay-menu-component');
    const closeButton = document.getElementById('close-menu-button');
    const closeButtonMobile = document.getElementById('close-menu-button-mobile');
    const backdrop = document.getElementById('menu-backdrop');
    const menuButtons = document.querySelectorAll('.menu-section');
    const contentSections = document.querySelectorAll('.menu-content');
    const mobileToggles = document.querySelectorAll('.mobile-menu-toggle');

    if (!overlayMenu) return;

    // Close menu
    function closeMenu() {
      overlayMenu.classList.add('hidden');
      window.dispatchEvent(new CustomEvent('closeMenu'));
    }

    // Open menu
    window.addEventListener('openMenu', () => {
      overlayMenu.classList.remove('hidden');
    });

    // Close handlers
    closeButton?.addEventListener('click', closeMenu);
    closeButtonMobile?.addEventListener('click', closeMenu);
    backdrop?.addEventListener('click', closeMenu);
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !overlayMenu.classList.contains('hidden')) {
        closeMenu();
      }
    });

    // Mobile: Accordion toggle
    mobileToggles.forEach((toggle) => {
      toggle.addEventListener('click', () => {
        const content = toggle.nextElementSibling;
        const chevron = toggle.querySelector('.mobile-chevron');
        
        if (content && chevron) {
          const isOpen = !content.classList.contains('hidden');
          
          if (isOpen) {
            content.classList.add('hidden');
            chevron.style.transform = 'rotate(0deg)';
          } else {
            content.classList.remove('hidden');
            chevron.style.transform = 'rotate(90deg)';
          }
        }
      });
    });

    // Desktop: Section switching with grey background
    menuButtons.forEach((button) => {
      button.addEventListener('click', () => {
        const section = button.getAttribute('data-section');

            // Update active button styling - Porsche style grey background
            menuButtons.forEach((btn) => {
              btn.classList.remove('bg-porsche-grey');
            });
            button.classList.add('bg-porsche-grey');

        // Show/hide content
        contentSections.forEach((content) => {
          content.classList.toggle('hidden', content.getAttribute('data-content') !== section);
        });
      });
    });

    // Initialize first section as active with grey background (desktop only)
    if (menuButtons[0]) {
      menuButtons[0].classList.add('bg-porsche-grey');
    }
    menuButtons[0]?.click();
  });
</script>

<style>
  /* Slide + fade animation for overlay */
  .fixed {
    animation: fadeIn 340ms cubic-bezier(0.22, 1, 0.36, 1);
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  /* Stagger animation for menu cards */
  .menu-content > div > * {
    animation: slideUp 500ms cubic-bezier(0.22, 1, 0.36, 1) backwards;
  }

  .menu-content > div > *:nth-child(1) { animation-delay: 0ms; }
  .menu-content > div > *:nth-child(2) { animation-delay: 40ms; }
  .menu-content > div > *:nth-child(3) { animation-delay: 80ms; }
  .menu-content > div > *:nth-child(4) { animation-delay: 120ms; }
  .menu-content > div > *:nth-child(5) { animation-delay: 160ms; }
  .menu-content > div > *:nth-child(6) { animation-delay: 200ms; }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .fixed {
      animation: none;
    }
    .menu-content > div > * {
      animation: none;
    }
  }
</style>
