---
// Header component with hamburger menu - Porsche inspired
---

<header
  class="absolute top-0 left-0 right-0 z-50 transition-all duration-300"
  id="site-header"
>
  <!-- Porsche-style gradient fade backdrop -->
  <div class="absolute inset-0 transition-all duration-300" id="header-backdrop">
    <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-transparent backdrop-blur-sm" id="header-gradient"></div>
  </div>
  
  <div class="relative max-w-7xl mx-auto px-4 md:px-6">
    <div class="flex items-center justify-between h-14 md:h-16">
      <!-- Left: Hamburger with Menu label -->
      <div>
        <button
          id="hamburger-button"
          class="flex items-center gap-2 focus:outline-none focus:ring-2 focus:ring-white rounded-lg transition-colors px-2 py-2"
          aria-label="Toggle menu"
          aria-expanded="false"
        >
          <svg
            class="hamburger-icon w-5 h-5 text-white transition-colors duration-300"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
            <path d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <span class="menu-label hidden md:inline text-white text-sm font-medium tracking-wide transition-colors duration-300">Menu</span>
        </button>
      </div>

      <!-- Center: Wordmark -->
      <div class="absolute left-1/2 -translate-x-1/2">
        <a href="/" class="focus:outline-none focus:ring-0">
          <h1 class="text-base md:text-lg font-bold tracking-[0.15em] text-white transition-colors duration-300 uppercase">
            Italian Venues
          </h1>
        </a>
      </div>

      <!-- Right: WhatsApp Icon -->
      <div>
        <a
          href="https://wa.me/393471234567?text=Hi%2C%20I'm%20interested%20in%20Italian%20wedding%20venues"
          target="_blank"
          rel="noopener"
          class="whatsapp-icon flex items-center justify-center w-10 h-10 rounded-full bg-white/10 hover:bg-[#25D366] backdrop-blur-sm transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-white group"
          aria-label="Contact us on WhatsApp"
        >
          <svg class="w-5 h-5 text-white transition-transform duration-300 group-hover:scale-110" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</header>

<!-- Client-side header behavior and scroll detection -->
<script>
  const header = document.getElementById('site-header');
  const headerBackdrop = document.getElementById('header-backdrop');
  const wordmark = header?.querySelector('h1');
  const hamburgerIcon = header?.querySelector('.hamburger-icon');
  const menuLabel = header?.querySelector('.menu-label');
  const whatsappIcon = header?.querySelector('.whatsapp-icon');

  // Update header based on scroll position
  function updateHeaderVariant() {
    const scrollY = window.scrollY;
    const isScrolled = scrollY > 48;
    const headerGradient = document.getElementById('header-gradient');

    if (!header || !wordmark || !hamburgerIcon || !headerBackdrop || !headerGradient || !menuLabel || !whatsappIcon) return;

    if (isScrolled) {
      // White background with shadow (hide gradient)
      headerGradient.classList.add('hidden');
      headerBackdrop.classList.add('bg-white', 'shadow-lg');
      wordmark.classList.remove('text-white');
      wordmark.classList.add('text-black');
      hamburgerIcon.classList.remove('text-white');
      hamburgerIcon.classList.add('text-black');
      menuLabel.classList.remove('text-white');
      menuLabel.classList.add('text-black');
      whatsappIcon.classList.remove('bg-white/10');
      whatsappIcon.classList.add('bg-zinc-100');
    } else {
      // Gradient fade (Porsche style)
      headerGradient.classList.remove('hidden');
      headerBackdrop.classList.remove('bg-white', 'shadow-lg');
      wordmark.classList.remove('text-black');
      wordmark.classList.add('text-white');
      hamburgerIcon.classList.remove('text-black');
      hamburgerIcon.classList.add('text-white');
      menuLabel.classList.remove('text-black');
      menuLabel.classList.add('text-white');
      whatsappIcon.classList.remove('bg-zinc-100');
      whatsappIcon.classList.add('bg-white/10');
    }
  }

  updateHeaderVariant();
  window.addEventListener('scroll', updateHeaderVariant, { passive: true });

  // Menu toggle (will be handled by index.astro)
  const hamburger = document.getElementById('hamburger-button');
  hamburger?.addEventListener('click', () => {
    const event = new CustomEvent('openMenu');
    window.dispatchEvent(event);
  });
</script>
