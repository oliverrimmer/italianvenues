---
import BaseLayout from '../../layouts/BaseLayout.astro';

const locationData = await import('../../data/locations/amalfi-coast.json');
const {
  name, heroImage, heroTitle, heroDescription, metaDescription, about, climate, accessibility, serviceAreas, distancesFromMajorCities, featuredVenues, localExperience, comparisonInsights, seoKeywords, cta
} = locationData.default;

// List of venues with actual detail pages
const availableVenueSlugs = ['la-posta-vecchia', 'mezzatorre-hotel-thermal-spa', 'hotel-il-pellicano', 'le-sirenuse', 'belmond-hotel-caruso'];
---

<BaseLayout 
  title={`${heroTitle} | Luxury Amalfi Coast Wedding Venues & Planning | ItalianVenues`}
  description={metaDescription}
  ogImage={heroImage}
>
  <!-- Schema.org JSON-LD for Location -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "TouristDestination",
    "name": `${name} Wedding Destination`,
    "description": metaDescription,
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": "40.6333",
      "longitude": "14.6029"
    },
    "touristType": "Destination Wedding",
    "isAccessibleForFree": false,
    "publicAccess": true
  })} />

  <!-- HERO SECTION -->
  <section class="relative h-screen bg-black">
    <img
      src={heroImage}
      alt={`${name} wedding destination - dramatic cliffside views`}
      class="absolute inset-0 w-full h-full object-cover opacity-60"
      fetchpriority="high"
      loading="eager"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/30 to-black/70"></div>
    
    <div class="relative z-10 h-full flex flex-col items-center justify-center px-6 text-center">
      <p class="text-[#a78656] text-sm md:text-base font-medium tracking-wider uppercase mb-4">Italian Wedding Destinations</p>
      <h1 class="heading-h1 text-white mb-6 max-w-5xl">
        {heroTitle}
      </h1>
      <p class="text-white/90 text-lg md:text-2xl max-w-4xl mb-10 leading-relaxed">
        {heroDescription}
      </p>
      <div class="flex gap-4 flex-wrap justify-center">
        <a href="#venues" class="inline-flex items-center px-8 py-4 bg-[#a78656] text-white font-semibold hover:bg-[#8f6d47] transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-[#a78656] rounded-lg">
          View Venues
        </a>
        <a href="#contact" class="inline-flex items-center px-8 py-4 border-2 border-white text-white font-semibold hover:bg-white hover:text-black transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-white rounded-lg">
          Plan Your Wedding
        </a>
      </div>
    </div>
  </section>

  <!-- STICKY NAVIGATION BAR -->
  <nav id="sticky-nav" class="sticky top-0 z-40 bg-white border-b border-zinc-200 shadow-sm transition-all duration-200">
    <div class="container mx-auto px-6 max-w-7xl">
      <div class="flex items-center gap-3 overflow-x-auto scrollbar-hide py-4">
        <a href="#overview" class="nav-link inline-flex items-center px-4 py-2 text-sm font-medium rounded-full transition-all duration-200 text-zinc-600 whitespace-nowrap">Overview</a>
        <a href="#climate" class="nav-link inline-flex items-center px-4 py-2 text-sm font-medium rounded-full transition-all duration-200 text-zinc-600 whitespace-nowrap">Climate</a>
        <a href="#venues" class="nav-link inline-flex items-center px-4 py-2 text-sm font-medium rounded-full transition-all duration-200 text-zinc-600 whitespace-nowrap">Venues</a>
        <a href="#experiences" class="nav-link inline-flex items-center px-4 py-2 text-sm font-medium rounded-full transition-all duration-200 text-zinc-600 whitespace-nowrap">Experiences</a>
        <a href="#accessibility" class="nav-link inline-flex items-center px-4 py-2 text-sm font-medium rounded-full transition-all duration-200 text-zinc-600 whitespace-nowrap">Getting There</a>
        <a href="#insights" class="nav-link inline-flex items-center px-4 py-2 text-sm font-medium rounded-full transition-all duration-200 text-zinc-600 whitespace-nowrap">Why Amalfi</a>
        <a href="#contact" class="nav-link inline-flex items-center px-4 py-2 text-sm font-medium rounded-full transition-all duration-200 text-zinc-600 whitespace-nowrap">Contact</a>
      </div>
    </div>
  </nav>

  <!-- OVERVIEW SECTION -->
  <section id="overview" class="bg-white py-24 md:py-32">
    <div class="container mx-auto px-6 max-w-6xl">
      <div class="text-center mb-16">
        <h2 class="heading-h2 font-semibold mb-6 text-zinc-900">Italy's Most Iconic Coastal Wedding Destination</h2>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-16">
        <div class="space-y-6">
          <p class="text-lg leading-relaxed text-zinc-700">{about.intro}</p>
          <p class="text-lg leading-relaxed text-zinc-700">{about.landscape}</p>
        </div>
        <div class="space-y-6">
          <p class="text-lg leading-relaxed text-zinc-700">{about.culture}</p>
          <p class="text-lg leading-relaxed text-zinc-700">{about.cuisine}</p>
        </div>
      </div>

      <!-- Service Areas -->
      <div class="bg-gradient-to-br from-zinc-50 to-zinc-100 rounded-2xl p-10 border border-zinc-200">
        <h3 class="heading-h3 font-semibold mb-6 text-zinc-900 text-center">Coastal Towns & Villages</h3>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
          {serviceAreas.map((area) => (
            <div class="bg-white px-5 py-3 rounded-lg shadow-sm border border-zinc-200 text-center">
              <span class="text-zinc-800 font-medium">{area}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CLIMATE SECTION -->
  <section id="climate" class="bg-gradient-to-b from-zinc-50 to-white py-24 md:py-32">
    <div class="container mx-auto px-6 max-w-6xl">
      <div class="text-center mb-12">
        <h2 class="heading-h2 font-semibold mb-4 text-zinc-900">Climate & Best Wedding Seasons</h2>
        <p class="text-xl text-zinc-700 max-w-3xl mx-auto leading-relaxed">{climate.summary}</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
        {climate.seasons.map((season) => (
          <div class="bg-white p-8 rounded-2xl border border-zinc-200 shadow-sm hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-2xl font-semibold text-zinc-900">{season.months}</h3>
              <span class="px-4 py-2 bg-[#a78656]/10 text-[#a78656] font-semibold rounded-full text-sm">{season.avgTemp}</span>
            </div>
            <div class="flex gap-4 mb-4 text-sm">
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"></path>
                </svg>
                <span class="text-zinc-600">{season.rainfall} rainfall</span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
                <span class="text-zinc-600">{season.daylight} daylight</span>
              </div>
            </div>
            <p class="text-zinc-700 leading-relaxed">{season.description}</p>
          </div>
        ))}
      </div>

      <div class="bg-[#a78656] text-white p-8 rounded-2xl text-center">
        <h4 class="text-2xl font-semibold mb-3">Best Months for Weddings</h4>
        <p class="text-lg text-white/90">{climate.bestMonths}</p>
      </div>
    </div>
  </section>

  <!-- FEATURED VENUES SECTION -->
  <section id="venues" class="bg-white py-24 md:py-32">
    <div class="container mx-auto px-6 max-w-7xl">
      <div class="text-center mb-12">
        <h2 class="heading-h2 font-semibold mb-4 text-zinc-900">Featured Amalfi Coast Wedding Venues</h2>
        <p class="text-xl text-zinc-700 max-w-3xl mx-auto">From clifftop palazzos to historic monasteries and island retreats</p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
        {featuredVenues.map((venue) => (
          <a 
            href={availableVenueSlugs.includes(venue.slug) ? `/venues/${venue.slug}` : `#contact`}
            class="group block bg-zinc-50 rounded-2xl overflow-hidden border border-zinc-200 hover:border-[#a78656] transition-all hover:shadow-2xl"
          >
            <div class="relative h-80 overflow-hidden">
              <img 
                src={venue.image} 
                alt={`${venue.name} - ${venue.setting} wedding venue in ${venue.location}`}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                loading="lazy"
                decoding="async"
              />
              {venue.featured && (
                <div class="absolute top-4 right-4 px-4 py-2 bg-[#a78656] text-white text-sm font-semibold rounded-full shadow-lg">
                  Featured
                </div>
              )}
            </div>
            <div class="p-8">
              <div class="flex items-start justify-between mb-3">
                <h3 class="text-2xl font-semibold text-zinc-900 group-hover:text-[#a78656] transition-colors">{venue.name}</h3>
                <svg class="w-6 h-6 text-[#a78656] transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
              <p class="text-zinc-600 font-medium mb-2">{venue.setting} â€¢ {venue.location}</p>
              <p class="text-zinc-700 leading-relaxed mb-4">{venue.usp}</p>
              <div class="flex items-center gap-4 text-sm">
                <div class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-zinc-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                  </svg>
                  <span class="text-zinc-600">Up to {venue.maxGuests} guests</span>
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>

      <div class="text-center mt-12">
        <a href="/venues?region=Amalfi Coast" class="inline-flex items-center px-8 py-4 bg-[#a78656] text-white font-semibold rounded-lg hover:bg-[#8f6d47] transition-colors duration-200">
          View All Amalfi Coast Venues
        </a>
      </div>
    </div>
  </section>

  <!-- LOCAL EXPERIENCES SECTION -->
  <section id="experiences" class="bg-gradient-to-b from-zinc-50 to-white py-24 md:py-32">
    <div class="container mx-auto px-6 max-w-6xl">
      <div class="text-center mb-12">
        <h2 class="heading-h2 font-semibold mb-4 text-zinc-900">Amalfi Coast Wedding Experiences</h2>
        <p class="text-xl text-zinc-700 max-w-3xl mx-auto leading-relaxed">{localExperience.intro}</p>
      </div>

      <!-- Activities Grid -->
      <div class="mb-16">
        <h3 class="text-2xl font-semibold text-zinc-900 mb-8">Guest Activities & Excursions</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
          {localExperience.activities.map((activity) => (
            <div class="flex items-start gap-4 bg-white p-6 rounded-xl border border-zinc-200 shadow-sm hover:shadow-md transition-shadow">
              <svg class="w-6 h-6 text-[#a78656] flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-zinc-800 leading-relaxed">{activity}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Vendors & Accommodations -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-white p-8 rounded-2xl border border-zinc-200 shadow-sm">
          <div class="flex items-center gap-3 mb-4">
            <svg class="w-8 h-8 text-[#a78656]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <h4 class="text-xl font-semibold text-zinc-900">Local Wedding Vendors</h4>
          </div>
          <p class="text-zinc-700 leading-relaxed">{localExperience.vendors}</p>
        </div>

        <div class="bg-white p-8 rounded-2xl border border-zinc-200 shadow-sm">
          <div class="flex items-center gap-3 mb-4">
            <svg class="w-8 h-8 text-[#a78656]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            <h4 class="text-xl font-semibold text-zinc-900">Guest Accommodations</h4>
          </div>
          <p class="text-zinc-700 leading-relaxed">{localExperience.accommodations}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- ACCESSIBILITY SECTION -->
  <section id="accessibility" class="bg-white py-24 md:py-32">
    <div class="container mx-auto px-6 max-w-6xl">
      <div class="text-center mb-12">
        <h2 class="heading-h2 font-semibold mb-4 text-zinc-900">Getting to the Amalfi Coast</h2>
        <p class="text-xl text-zinc-700 max-w-3xl mx-auto">Accessible from Naples and Rome with scenic coastal transfers</p>
      </div>

      <!-- Airports -->
      <div class="mb-12">
        <h3 class="text-2xl font-semibold text-zinc-900 mb-6 text-center">International Airports</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {accessibility.airports.map((airport) => (
            <div class="bg-zinc-50 p-8 rounded-2xl border border-zinc-200 text-center hover:border-[#a78656] transition-all hover:shadow-lg">
              <svg class="w-12 h-12 text-[#a78656] mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
              </svg>
              <h4 class="text-xl font-semibold text-zinc-900 mb-2">{airport.name}</h4>
              <p class="text-[#a78656] font-medium mb-3">{airport.distance}</p>
              <p class="text-zinc-600 text-sm leading-relaxed">{airport.description}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- Transport Options -->
      <div class="bg-gradient-to-br from-zinc-50 to-zinc-100 rounded-2xl p-10 border border-zinc-200 mb-12">
        <h3 class="text-2xl font-semibold text-zinc-900 mb-4 text-center">Transport & Transfers</h3>
        <p class="text-lg text-zinc-700 leading-relaxed text-center max-w-4xl mx-auto">{accessibility.transport}</p>
      </div>

      <!-- Distances from Major Cities -->
      <div class="bg-white rounded-2xl border border-zinc-200 overflow-hidden">
        <div class="bg-zinc-100 px-8 py-4 border-b border-zinc-200">
          <h3 class="text-xl font-semibold text-zinc-900">Distances from Major Italian Cities</h3>
        </div>
        <div class="p-8">
          <div class="space-y-4">
            {Object.entries(distancesFromMajorCities).map(([city, details]) => (
              <div class="flex items-center justify-between py-3 border-b border-zinc-200 last:border-0">
                <div class="flex items-center gap-3">
                  <svg class="w-5 h-5 text-[#a78656]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  </svg>
                  <span class="text-lg font-semibold text-zinc-900">{city}</span>
                </div>
                <span class="text-zinc-600 font-medium">{details}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- COMPARISON INSIGHTS SECTION -->
  <section id="insights" class="bg-gradient-to-b from-zinc-50 to-white py-24 md:py-32">
    <div class="container mx-auto px-6 max-w-6xl">
      <div class="text-center mb-12">
        <h2 class="heading-h2 font-semibold mb-4 text-zinc-900">Why Choose the Amalfi Coast?</h2>
        <p class="text-xl text-zinc-700 max-w-3xl mx-auto">How the Amalfi Coast compares to other Italian wedding destinations</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
        <div class="bg-white p-8 rounded-2xl border border-zinc-200 shadow-sm">
          <h4 class="text-xl font-semibold text-zinc-900 mb-3">Amalfi Coast vs. Tuscany</h4>
          <p class="text-zinc-700 leading-relaxed">{comparisonInsights.vsTuscany}</p>
        </div>
        <div class="bg-white p-8 rounded-2xl border border-zinc-200 shadow-sm">
          <h4 class="text-xl font-semibold text-zinc-900 mb-3">Amalfi Coast vs. Lake Como</h4>
          <p class="text-zinc-700 leading-relaxed">{comparisonInsights.vsLakeComo}</p>
        </div>
        <div class="bg-white p-8 rounded-2xl border border-zinc-200 shadow-sm">
          <h4 class="text-xl font-semibold text-zinc-900 mb-3">Amalfi Coast vs. Puglia</h4>
          <p class="text-zinc-700 leading-relaxed">{comparisonInsights.vsPuglia}</p>
        </div>
        <div class="bg-white p-8 rounded-2xl border border-zinc-200 shadow-sm">
          <h4 class="text-xl font-semibold text-zinc-900 mb-3">The Amalfi Advantage</h4>
          <p class="text-zinc-700 leading-relaxed">{comparisonInsights.whyAmalfi}</p>
        </div>
      </div>

      <div class="bg-[#a78656] text-white p-10 rounded-2xl text-center">
        <h3 class="text-3xl font-semibold mb-4">Ready to Plan Your Amalfi Coast Wedding?</h3>
        <p class="text-xl text-white/90 mb-6 max-w-3xl mx-auto">
          Let us help you discover the perfect clifftop venue and create an unforgettable coastal celebration
        </p>
        <a href="#contact" class="inline-flex items-center px-8 py-4 bg-white text-[#a78656] font-semibold rounded-lg hover:bg-zinc-100 transition-colors duration-200">
          Get Started
        </a>
      </div>
    </div>
  </section>

  <!-- CONTACT SECTION -->
  <section id="contact" class="bg-[hsl(0,0%,3%)] text-white py-24 md:py-32">
    <div class="container mx-auto px-6 max-w-2xl">
      <h2 class="heading-h2 font-semibold mb-6 text-center">Request a Tailored Amalfi Coast Wedding Quote</h2>
      <p class="text-center text-zinc-400 mb-12">Tell us about your dream Amalfi Coast wedding and we'll connect you with the perfect venues and vendors.</p>
      
      <form class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="name" class="block text-sm font-medium text-zinc-300 mb-2">Full Name *</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 bg-white/5 border border-zinc-700 rounded-lg text-white placeholder:text-zinc-500 focus:outline-none focus:ring-2 focus:ring-[#a78656] focus:border-transparent"
              placeholder="Your name"
            />
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-zinc-300 mb-2">Email *</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 bg-white/5 border border-zinc-700 rounded-lg text-white placeholder:text-zinc-500 focus:outline-none focus:ring-2 focus:ring-[#a78656] focus:border-transparent"
              placeholder="your.email@domain.com"
            />
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="guests" class="block text-sm font-medium text-zinc-300 mb-2">Number of Guests</label>
            <input
              type="number"
              id="guests"
              name="guests"
              class="w-full px-4 py-3 bg-white/5 border border-zinc-700 rounded-lg text-white placeholder:text-zinc-500 focus:outline-none focus:ring-2 focus:ring-[#a78656] focus:border-transparent"
              placeholder="150"
            />
          </div>
          <div>
            <label for="date" class="block text-sm font-medium text-zinc-300 mb-2">Preferred Date</label>
            <input
              type="date"
              id="date"
              name="date"
              class="w-full px-4 py-3 bg-white/5 border border-zinc-700 rounded-lg text-white placeholder:text-zinc-500 focus:outline-none focus:ring-2 focus:ring-[#a78656] focus:border-transparent"
            />
          </div>
        </div>

        <div>
          <label for="region" class="block text-sm font-medium text-zinc-300 mb-2">Preferred Coastal Town</label>
          <select
            id="region"
            name="region"
            class="w-full px-4 py-3 bg-white/5 border border-zinc-700 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-[#a78656] focus:border-transparent"
          >
            <option value="" class="text-black">Select a town...</option>
            <option value="positano" class="text-black">Positano</option>
            <option value="ravello" class="text-black">Ravello</option>
            <option value="amalfi" class="text-black">Amalfi</option>
            <option value="sorrento" class="text-black">Sorrento</option>
            <option value="praiano" class="text-black">Praiano</option>
            <option value="capri" class="text-black">Capri</option>
