<script is:inline>
  // Lightweight mobile optimization - remove desktop table BEFORE layout/paint
  (function() {
    'use strict';
    
    // Check if mobile immediately (before DOM parsing)
    const isMobile = window.innerWidth < 768 || window.matchMedia('(max-width: 767px)').matches;
    
    // On mobile, remove table as early as possible
    if (isMobile) {
      // Try to remove immediately
      function removeTable() {
        const table = document.getElementById('desktop-quick-reference');
        if (table) {
          table.remove();
          return true;
        }
        return false;
      }
      
      // Try immediately if DOM exists
      if (!removeTable()) {
        // If not found, wait for DOM but run as early as possible
        if (document.readyState === 'loading') {
          // Use readystatechange for earliest possible execution
          document.addEventListener('DOMContentLoaded', removeTable, { once: true, passive: true });
          // Also try immediately on next tick
          setTimeout(removeTable, 0);
        } else {
          // DOM already loading, try immediately
          removeTable();
        }
      }
    }
    
    // Desktop: Defer heavy header updates until after paint
    if (!isMobile && document.querySelector('.venue-header')) {
      
      // Defer header number extraction until after initial paint
      function updateHeaders() {
        const venueHeaders = document.querySelectorAll('.venue-header');
        if (venueHeaders.length === 0) return;
        
        // Process one at a time using requestAnimationFrame
        let index = 0;
        
        function processBatch() {
          if (index >= venueHeaders.length) return;
          
          try {
            const header = venueHeaders[index];
            if (header) {
              const text = header.textContent || '';
              const match = text.match(/^(\d+)\.\s*(.+)$/);
              if (match) {
                header.innerHTML = `<span class="venue-number">${match[1]}</span><span class="venue-name">${match[2]}</span>`;
              }
            }
          } catch (e) {
            // Silently fail
          }
          
          index++;
          if (index < venueHeaders.length) {
            requestAnimationFrame(processBatch);
          }
        }
        
        // Start after page is painted
        if (window.requestIdleCallback) {
          requestIdleCallback(processBatch, { timeout: 2000 });
        } else {
          setTimeout(processBatch, 500);
        }
      }
      
      // Only run on desktop, defer significantly
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', () => {
          setTimeout(updateHeaders, 500);
        }, { once: true });
      } else {
        setTimeout(updateHeaders, 500);
      }
    }
  })();
</script>

